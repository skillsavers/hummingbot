# VPS Connection Settings
VPS_HOST=46.101.135.160
VPS_USER=root

# GitHub Container Registry Authentication (for private images)
# Create a Personal Access Token at: https://github.com/settings/tokens
# Required scopes: read:packages
GITHUB_USERNAME=your_github_username
GITHUB_TOKEN=ghp_your_github_token_here

# =================================================================
# Hummingbot Configuration (REQUIRED)
# =================================================================
CONFIG_PASSWORD=your_secure_password_here

# =================================================================
# Hummingbot API Configuration (REQUIRED - for MCP integration)
# =================================================================
API_USERNAME=your_api_username
API_PASSWORD=your_api_password

# =================================================================
# Database Configuration (REQUIRED)
# =================================================================
POSTGRES_PASSWORD=your_postgres_password

# =================================================================
# MQTT Broker Configuration (REQUIRED)
# =================================================================
BROKER_USERNAME=your_broker_username
BROKER_PASSWORD=your_broker_password

# =================================================================
# Market Data Settings
# =================================================================
MARKET_DATA_CLEANUP_INTERVAL=300
MARKET_DATA_FEED_TIMEOUT=600

# Debug mode (set to true for verbose logging)
DEBUG_MODE=false

# Watchtower Settings
# How often to check for updates (in seconds, default 3600 = 1 hour)
WATCHTOWER_POLL_INTERVAL=3600

